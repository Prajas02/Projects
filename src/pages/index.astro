---
import BaseLayout from "../layouts/BaseLayout.astro"
import SideBar from "../components/SideBar.astro"
import ImageCards from '../components/ImageCards.astro'

const accessKey = '-k93mLy_4JNT50BDfy9GMy0U2F58LStlS2v5rLpVy1g'
const response = await fetch(`https://api.unsplash.com/photos/?client_id=${accessKey}`)
const data = await response.json()
---

<BaseLayout title = 'WallPaper | Home'>
    <div class="flex flex-col md:flex-row px-5 md:px-10 w-full min-h-min bg-black">
        <!-- <SideBar />  -->

        <div class=" w-full grid grid-cols-2 gap-x-2 gap-y-2 md:gap-x-4 md:gap-y-4 md:ml-80 md:grid-cols-3 md:grid-rows-10">
            {data.map((object)=>{
                return(
                    <ImageCards imgUrl = {object.urls.regular} imgAlt = {object.alt_description} />
                )
            })}
        </div>
    </div>
</BaseLayout>